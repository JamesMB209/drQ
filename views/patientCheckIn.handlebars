<form action="/patient" method="post">
  <label>choose doctor</label>
  <ul>
    {{#each doctor}}
      <option value="{{id}}">Doctor:{{fName}}
        {{lName}}
        in room
        {{room}}</option>
    {{/each}}
  </ul>

  <label for="f_name">First Name</label><br />
  <input name="fName" placeholder="first name" value="" />
  <br />

  <label for="l_name">Last Name</label><br />
  <input name="lName" placeholder="first name" value="" />
  <br />

  <label for="doctor">Select a doctor</label>
  <br />

  <select id="" name="doctor">
    {{#each doctor}}
      <option value="{{id}}">Doctor:{{fName}}{{lName}} inroom {{room}}</option>
    {{/each}}
  </select>
  <br />

  <label for="temperature">Temperature</label><br />
  <input name="temperature" value="" placeholder="celsius" />

  <br />
  <button type="submit" value="checkIn">check in </button>

</form>